{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":label(renovate)",
    ":prHourlyLimitNone",
    ":timezone(Asia/Tokyo)",
    ":rebaseStalePrs",
    ":disableDependencyDashboard",
    ":automergePatch",
    ":automergeDigest",
    "schedule:weekends"
  ],
  "ignorePaths": [
    "tests/**"
  ],
  "github-actions": {
    "enabled": false
  },
  "platformAutomerge": true,
  "baseBranches": [
    "main"
  ],
  "rangeStrategy": "auto",
  "digest": {
    "addLabels": [
      "digest"
    ]
  },
  "pin": {
    "addLabels": [
      "pin"
    ]
  },
  "patch": {
    "addLabels": [
      "patch"
    ]
  },
  "minor": {
    "addLabels": [
      "minor"
    ]
  },
  "major": {
    "addLabels": [
      "major"
    ]
  },
  "packageRules": [
    {
      "addLabels": [
        "docker"
      ],
      "matchDatasources": [
        "docker"
      ]
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "description": "Manage image version",
      "fileMatch": [
        "^charts/fluent-sandbox/values.yaml$"
      ],
      "matchStrings": [
        "imageRepo: (?<depName>.*)\\s+imageTag: \"(?<currentValue>.*)\"$"
      ],
      "datasourceTemplate": "docker"
    }
  ]
}
