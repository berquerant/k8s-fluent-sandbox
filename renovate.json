{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":label(renovate)",
    ":prHourlyLimitNone",
    ":timezone(Asia/Tokyo)",
    ":rebaseStalePrs",
    ":disableDependencyDashboard",
    "schedule:weekends"
  ],
  "ignorePaths": [
    "tests/**"
  ],
  "github-actions": {
    "enabled": false
  },
  "platformAutomerge": false,
  "baseBranches": [
    "main"
  ],
  "rangeStrategy": "auto",
  "digest": {
    "addLabels": [
      "digest"
    ]
  },
  "pin": {
    "addLabels": [
      "pin"
    ]
  },
  "patch": {
    "addLabels": [
      "patch"
    ]
  },
  "minor": {
    "addLabels": [
      "minor"
    ]
  },
  "major": {
    "addLabels": [
      "major"
    ]
  },
  "packageRules": [
    {
      "addLabels": [
        "docker"
      ],
      "matchDatasources": [
        "docker"
      ]
    }
  ]
}
